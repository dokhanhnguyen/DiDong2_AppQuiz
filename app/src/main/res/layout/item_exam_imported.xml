<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_mini"
    android:background="@drawable/bg_button_square_white">

    <TextView
        android:id="@+id/tv_number"
        tools:text="1"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:layout_width="32dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:padding="@dimen/margin_small"
        android:layout_toEndOf="@+id/tv_number"
        android:layout_toStartOf="@+id/bt_delete"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            tools:text="Đề luyện tập số 1"
            android:lineSpacingExtra="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="@dimen/margin_mini"
            android:layout_marginBottom="@dimen/margin_mini"
            android:background="@color/color_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_question"
                android:drawableStart="@drawable/ic_label_outline"
                android:drawablePadding="@dimen/margin_mini"
                tools:text="30 câu"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_time"
                android:drawableStart="@drawable/ic_access_time"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/margin_medium"
                android:drawablePadding="@dimen/margin_mini"
                tools:text="45 phút"
                android:textColor="@color/grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/bt_delete"
        android:layout_margin="1dp"
        android:src="@drawable/ic_close"
        android:background="@drawable/bg_button_circle_white"
        android:layout_alignParentEnd="true"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
</RelativeLayout>