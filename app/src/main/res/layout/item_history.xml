<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_mini"
    android:background="@drawable/bg_button_square_white"
    android:padding="@dimen/margin_small">

    <TextView
        android:id="@+id/tv_number"
        tools:text="1"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:layout_width="32dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            tools:text="Những nguyên lí cơ bản của CN Mac-Lênin\nĐề luyện tập số 1"
            android:lineSpacingExtra="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="@dimen/margin_mini"
            android:layout_marginBottom="@dimen/margin_mini"
            android:background="@color/color_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <TextView
            android:id="@+id/tv_score"
            android:drawableStart="@drawable/ic_star"
            android:drawablePadding="@dimen/margin_mini"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:lineSpacingExtra="6dp"
            tools:text="Điểm thi: 2.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_submitted"
            android:drawableStart="@drawable/ic_date_range"
            android:drawablePadding="@dimen/margin_mini"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:layout_marginTop="@dimen/margin_small"
            android:lineSpacingExtra="6dp"
            tools:text="Ngày thi: 02/08/2019 02:17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>